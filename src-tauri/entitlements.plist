<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Enable sandbox (required for App Store, good practice) -->
    <key>com.apple.security.app-sandbox</key>
    <true/>

    <!-- Access files/folders user selects via file picker -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>

    <!-- Persist access to user-selected files across app restarts -->
    <key>com.apple.security.files.bookmarks.app-scope</key>
    <true/>

    <!-- Required for WebView to function in sandbox -->
    <key>com.apple.security.network.client</key>
    <true/>
</dict>
</plist>
