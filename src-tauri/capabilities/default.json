{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:path:default",
    "opener:default",
    {
      "identifier": "opener:allow-open-path",
      "allow": [{ "path": "$TEMP/**" }]
    },
    "dialog:default",
    "fs:default",
    "fs:allow-temp-write-recursive",
    "fs:allow-copy-file",
    "fs:allow-write",
    "fs:allow-read",
    {
      "identifier": "fs:scope",
      "allow": [
        "$APPDATA/**",
        "$HOME/Library/CloudStorage/**",
        "$HOME/Google Drive/**",
        "$HOME/Dropbox/**",
        "$HOME/Documents/**",
        "$HOME/Desktop/**"
      ]
    }
  ]
}
